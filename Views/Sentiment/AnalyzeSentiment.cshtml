@model PrompSentiments.Domain.Models.SentimentViewModel

@{
    ViewData["Title"] = "Analyze Sentiment";
}

<h1>Sentiment Analysis</h1>

<form method="get" action="/Sentiment/AnalyzeSentiment">
    <label for="text">Enter text to analyze sentiment:</label>
    <textarea name="text" id="text" rows="4" cols="50">@Model.InputText</textarea>
    <br />
    <button type="submit">Analyze Sentiment</button>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div style="color:red;">@Model.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(Model.ResponseMessage))
{
    <h2>Analysis Result</h2>
    <p><strong>Sentiment:</strong> @Model.Sentiment</p>
    <p><strong>Response:</strong> @Model.ResponseMessage</p>
}
